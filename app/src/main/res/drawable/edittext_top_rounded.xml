<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with top rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EDE0F5" /> <!-- Light purple fill -->
            <corners
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>

    <!-- Bottom border line -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="58dp"> <!-- Adjust this to match EditText height -->
        <shape>
            <size android:height="2dp"/>
            <solid android:color="#6B43B5" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
