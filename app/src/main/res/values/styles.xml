<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="TimeChipStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">4dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="backgroundTint">@color/chip_background_selector</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:checkable">true</item>
    </style>
    
    <style name="customChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor"> @color/chip_background_selector</item>"
        <item name="chipMinHeight">48dp</item>
        <!-- Rounded corners -->
        <item name="chipCornerRadius">10dp</item>

        <!-- Border (stroke color and width) -->
        <item name="chipStrokeColor">@color/chip_stroke_selector</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">true</item>

        <!-- Text color -->
        <item name="android:textColor">#000000</item>


    </style>
    <style name="DatePickerDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">#966EAF</item>
        <item name="colorAccent">#966EAF</item>
    </style>

</resources>